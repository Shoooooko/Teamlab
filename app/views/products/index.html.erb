<p id="notice"><%= notice %></p>
  <% @products.each do |product| %>
    <p>
      <strong>商品タイトル：</strong>
      <%= @product.item %>
    </p>
    <p>
      <strong>商品説明：</strong>
      <%= @product.content %>
    </p>
    <p>
      <strong>店舗名：</strong>
      <%= @product.shop %>
    </p>
    <p>
      <strong>商品画像：</strong>
      <!--<%= @product.picture %>-->
      <%= image_tag(@product.picture_url) if @product.picture.present? %>
    </p>
    <p>
      <strong>価格：</strong>
      <%= @product.price %>
    </p>
  <% end %>
  


